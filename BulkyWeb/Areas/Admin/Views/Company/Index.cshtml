@{
    Layout = "_Layout";
}

<partial name="_Notification" />

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2>List of Companies</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> Create New Company
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table id="tblData" class="table table-bordered table-striped">
            <thead class="table-primary">
                <tr>
                    <th>Name</th>
                    <th>Street Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Phone Number</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.StreetAddress</td>
                        <td>@obj.City</td>
                        <td>@obj.State</td>
                        <td>@obj.PhoneNumber</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="Company" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Company" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/Company.js"></script>
}
