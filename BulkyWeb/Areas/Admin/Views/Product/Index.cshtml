@model List<Product>
<partial name="_Notification" />
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                List Of Products
            </h2>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> Create new Product
            </a>


        </div>
    </div>

</div>


<table class="table table-borders table-striped">
    <thead>
        <tr>
            <th>
                Product Id
            </th>
            <th>
                Title
            </th>

            <th>
                ISBN 
            </th>
            <th>
                Author
            </th>
            <th>
                CategoryId
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u => u.Id))
        {
            <tr>
                <td>@obj.Id</td>
                <td>
                    @obj.Title
                </td>
              
                <td>@obj.ISBN</td>
                <td>@obj.Author</td>
                <td></td>

               
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-30">
                            Edit   <i class="bi bi-pencil-square"></i>

                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            Delete   <i class="bi bi-trash3-fill"></i>

                        </a>
                    </div>

                </td>
            </tr>
        }
    </tbody>

</table>